   <div class = "alert alert-info">
      <%= flash[:notice] %>
   </div>
<% end %>
<table class = "table table-bordered table-striped">
<ul>
<% @pdfs.each do |pdf| %>
         
   <li><%= pdf.name %></td></ol> <%= image_tag pdf.preview(resize: "400x400") %></li>
